@using Blocktrust.CredentialWorkflow.Core.Domain.ProcessFlow.Outcomes

<div class="p-4 text-sm">
    <div class="space-y-3">
        <div class="p-2 border rounded-md">
            <label class="block text-xs font-medium text-gray-700 mb-1">Outcomes Type</label>
            <select class="w-full rounded border px-2 py-1 text-xs"
                    @bind="Definition.Type"
                    @bind:after="OnValueChanged">
                <option value="@EOutcomeType.Success">Success</option>
                <option value="@EOutcomeType.Failure">Failure</option>
            </select>
        </div>

        <div class="p-2 border rounded-md">
            <label class="block text-xs font-medium text-gray-700 mb-1">Message</label>
            <input type="text" 
                   class="w-full rounded border px-2 py-1 text-xs"
                   @bind="Definition.Message"
                   @bind:after="OnValueChanged"
                   placeholder="Enter outcome message" />
        </div>
    </div>
</div>

@code {
    [Parameter] public WorkflowOutcomeDefinition Definition { get; set; } = null!;
    [Parameter] public EventCallback OnChange { get; set; }

    private async Task OnValueChanged()
    {
        await OnChange.InvokeAsync();
    }
}