@using Blocktrust.CredentialWorkflow.Core.Domain.ProcessFlow.Action
@using Blocktrust.CredentialWorkflow.Core.Domain.ProcessFlow.Action.Input
@namespace Blocktrust.CredentialWorkflow.Web.Components.Features.Actions

<div class="p-4 text-sm">
    <div class="space-y-4">
        <!-- Verification Options -->
        <div class="bg-white p-4 rounded-lg border border-gray-200">
            <h3 class="font-medium mb-3 text-gray-700">Verification Checks</h3>
            
            <div class="space-y-3">
                <!-- Signature Verification -->
                <div class="flex items-center">
                    <input type="checkbox" 
                           id="checkSignature" 
                           class="rounded border-gray-300 text-slate-600 focus:ring-slate-500"
                           @bind="ActionInput.CheckSignature" />
                    <label for="checkSignature" class="ml-2 block text-sm text-gray-700">
                        Verify Signature
                    </label>
                </div>

                <!-- Status Verification -->
                <div class="flex items-center">
                    <input type="checkbox" 
                           id="checkStatus" 
                           class="rounded border-gray-300 text-slate-600 focus:ring-slate-500"
                           @bind="ActionInput.CheckStatus" />
                    <label for="checkStatus" class="ml-2 block text-sm text-gray-700">
                        Verify Status (Revocation)
                    </label>
                </div>

                <!-- Schema Verification -->
                <div class="flex items-center">
                    <input type="checkbox" 
                           id="checkSchema" 
                           class="rounded border-gray-300 text-slate-600 focus:ring-slate-500"
                           @bind="ActionInput.CheckSchema" />
                    <label for="checkSchema" class="ml-2 block text-sm text-gray-700">
                        Verify Schema
                    </label>
                </div>

                <!-- Trust Registry Verification -->
                <div class="flex items-center">
                    <input type="checkbox" 
                           id="checkTrustRegistry" 
                           class="rounded border-gray-300 text-slate-600 focus:ring-slate-500"
                           @bind="ActionInput.CheckTrustRegistry" />
                    <label for="checkTrustRegistry" class="ml-2 block text-sm text-gray-700">
                        Verify Trust Registry
                    </label>
                </div>

                <!-- Expiry Verification -->
                <div class="flex items-center">
                    <input type="checkbox" 
                           id="checkExpiry" 
                           class="rounded border-gray-300 text-slate-600 focus:ring-slate-500"
                           @bind="ActionInput.CheckExpiry" />
                    <label for="checkExpiry" class="ml-2 block text-sm text-gray-700">
                        Verify Expiry
                    </label>
                </div>
            </div>
        </div>

    
    </div>
</div>

@code {
    [Parameter] public ActionInputVerifyW3cCredential ActionInput { get; set; } = null!;
    [Parameter] public EventCallback OnChange { get; set; }
}