@inherits LayoutComponentBase

<div class="min-h-full flex flex-col h-screen">
    <TopBar/>
    <main class="flex-1 bg-gray-50">
        @Body
    </main>
    
    <div id="blazor-error-ui" class="fixed bottom-0 w-full bg-red-500 text-white p-4 hidden">
        <div class="container mx-auto flex justify-between items-center">
            <span>An unhandled error has occurred.</span>
            <div class="flex gap-4">
                <a href="" class="underline hover:text-gray-200">Reload</a>
                <a class="cursor-pointer hover:text-gray-200">🗙</a>
            </div>
        </div>
    </div>
</div>